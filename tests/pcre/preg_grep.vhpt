--TEST--
preg_grep - basic filter
--FILE--
<?php
$result = preg_grep("/a/", ["banana", "apple", "cherry", "date"]);
print_r($result);
--EXPECT--
Array
(
    [0] => banana
    [1] => apple
    [3] => date
)

--TEST--
preg_grep - no matches returns empty array
--FILE--
<?php
$result = preg_grep("/xyz/", ["banana", "apple", "cherry"]);
print_r($result);
--EXPECT--
Array
(
)

--TEST--
preg_grep - case insensitive
--FILE--
<?php
$result = preg_grep("/A/i", ["Apple", "banana", "cherry"]);
print_r($result);
--EXPECT--
Array
(
    [0] => Apple
    [1] => banana
)

--TEST--
preg_grep - empty input array
--FILE--
<?php
$result = preg_grep("/a/", []);
print_r($result);
--EXPECT--
Array
(
)

