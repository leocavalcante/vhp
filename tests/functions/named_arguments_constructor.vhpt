--TEST--
Named arguments with constructor
--FILE--
<?php
class Point {
    public $x;
    public $y;
    
    public function __construct($x = 0, $y = 0) {
        $this->x = $x;
        $this->y = $y;
    }
    
    public function display() {
        echo "(";
        echo $this->x;
        echo ", ";
        echo $this->y;
        echo ")\n";
    }
}

$p1 = new Point(x: 3, y: 4);
$p1->display();

$p2 = new Point(y: 5, x: 2);
$p2->display();

$p3 = new Point(x: 7);
$p3->display();
--EXPECT--
(3, 4)
(2, 5)
(7, 0)
